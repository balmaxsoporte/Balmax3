<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    android:background="@color/colorBackground"
    tools:context=".MapaEstacionamiento">

    <ImageView
        android:id="@+id/iv_mapa"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/estacionamiento_mapa"
        android:contentDescription="@string/titulo_mapa_estacionamiento"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/tv_seleccionar_patio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_seleccionar_patio"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_large"
        android:textColor="@color/colorOnSurface"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_patios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_medium"/>

    <Button
        android:id="@+id/btn_administrar_usuarios"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="Administrar Usuarios"/>
</LinearLayout>
