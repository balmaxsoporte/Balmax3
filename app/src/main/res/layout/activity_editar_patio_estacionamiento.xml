<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    android:background="@color/colorBackground"
    tools:context=".EditarPatioEstacionamiento">

    <TextView
        android:id="@+id/tv_titulo_editar_puesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textColor="@color/colorOnSurface"
        android:layout_marginTop="@dimen/margin_large"/>

    <!-- Lugar 1 -->
    <TextView
        android:id="@+id/tv_lugar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar 1"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/margin_medium"/>

    <EditText
        android:id="@+id/et_tipo_vehiculo_lugar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etiqueta_tipo_vehiculo_lugar1"
        android:maxLines="1"
        android:layout_marginTop="@dimen/margin_small"/>

    <EditText
        android:id="@+id/et_patente_lugar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etiqueta_patente_lugar1"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:layout_marginTop="@dimen/margin_small"/>

    <!-- Lugar 2 -->
    <TextView
        android:id="@+id/tv_lugar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar 2"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/margin_medium"/>

    <EditText
        android:id="@+id/et_tipo_vehiculo_lugar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etiqueta_tipo_vehiculo_lugar2"
        android:maxLines="1"
        android:layout_marginTop="@dimen/margin_small"/>

    <EditText
        android:id="@+id/et_patente_lugar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etiqueta_patente_lugar2"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:layout_marginTop="@dimen/margin_small"/>

    <!-- BotÃ³n Guardar -->
    <Button
        android:id="@+id/btn_guardar_cambios"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/boton_guardar_cambios"
        android:layout_marginTop="@dimen/margin_large"/>
</LinearLayout>
